#!/bin/sh

rm -f *.h *.cpp

if [ -d ../src/Analysis ] ; then
        echo "Linking files from Analysis dir"
        ln -s ../src/Analysis/*.h .;
fi;

if [ -d ../src/Cache ] ; then
        echo "Linking files from Cache dir"
        ln -s ../src/Cache/*.h .;
fi;

if [ -d ../src/Cluster ] ; then
        echo "Linking files from Cluster dir"
        ln -s ../src/Cluster/*.h .;
fi;

if [ -d ../src/Customop ] ; then
        echo "Linking files from Customop dir"
        ln -s ../src/Customop/*.h .;
fi;

if [ -d ../src/Codegen ] ; then
        echo "Linking files from Codegen dir"
        ln -s ../src/Codegen/*.h .;
fi;

if [ -d ../src/CPR ] ; then
        echo "Linking files from CPR dir"
        ln -s ../src/CPR/*.h .;
fi;

